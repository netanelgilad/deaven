{
  "compilerOptions": {
    "inlineSourceMap": true,
    "noEmit": true,
    "lib": ["es2017", "dom"],
    "target": "es2017",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/lib/**"]
}
